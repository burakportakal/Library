@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-reserved-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Kiralanan kitaplar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-returned-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">İade edilen kitaplar</a>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div id="table" class="container">
            <table id="booksReserved" class="table table-bordered">
                <thead>
                <tr>
                    <th>Kitap Adı</th>
                    <th>Yazar</th>
                    <th>Kiralama Tarihi</th>
                    <th>Beklenen İade Tarihi</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="tab-pane" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div id="returnedTable" class="container">
            <table id="booksReturned" class="table table-bordered">
                <thead>
                <tr>
                    <th>Kitap Adı</th>
                    <th>Yazar</th>
                    <th>Kiralama Tarihi</th>
                    <th>İade Tarihi</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="row justify-content-end">
    <div class="col-4" style="margin-right: 18px;">
        <button type="button" onclick="redirect()" style="float: right;" class="btn btn-primary mb-2">Yeni Kitap Kirala</button>
    </div>
</div>







@section Scripts{
    <script src="../../Scripts/profile.js"></script>

    <script src="../../Scripts/date.format.js"></script>
    <script>
        $(document).ready(function() {
            var authenticated = "@User.Identity.IsAuthenticated";
            callApi();

        });

        function redirect() {
            window.location.href = "/";
        }
    </script>
}
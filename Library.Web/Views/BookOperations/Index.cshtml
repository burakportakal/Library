@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="table"class="container">
    <div class="table-responsive">
        <table id="bookData" class="table table-bordered">
            <thead>
            <tr>
                <th>Isbn</th>
                <th>Kitap Adı</th>
                <th>Yazar</th>
                <th>Basım Tarihi</th>
                <th>Adet</th>
                <th>Kirada</th>
                <th>Kütüphanede</th>
            </tr>
            </thead>
        </table>
    </div>
</div>
<div class="container">

    <div class="row justify-content-between">
            <div class="col-4"">
                <a href="/log" style="float: left;" class="btn btn-primary mb-2">Log Sayfası</a>
            </div>
            <div class="col-4">
                <button type="button" onclick="redirect()" style="float: right;"class="btn btn-primary mb-2">Yeni Kitap Ekle</button>
            </div>
    </div>
</div>





@section Scripts{
    <script>
        $(document).ready(function () {
            $("#admin").removeClass("active");
            $("#main-page").removeClass("active");
            $("#my-books").removeClass("active");
            $("#api-help").removeClass("active");
            $("#admin").addClass("active");
            loadData();
        });

        function redirect() {
            window.location.href = "/bookoperations/create";
        }
    </script>
}
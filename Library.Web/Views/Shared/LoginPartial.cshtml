
<form class="col s12" method="post" id="loginForm" action="/token">
    <div class="form-container">
        <h3 class="teal-text">Hello</h3>
        <div class="row">
            <div class="input-field col s12">
                <input id="loginEmail" type="email" name="username" class="validate">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="loginPassword" type="password" name="password" class="validate">
                <label for="password">Password</label>
            </div>
        </div>
        <input type="hidden" name="grant_type" value="password"/>
        <br>
        <center>
            <button class="btn waves-effect waves-light teal" type="submit" name="action">Connect</button>
            <br>
            <br>
        </center>
    </div>
</form>